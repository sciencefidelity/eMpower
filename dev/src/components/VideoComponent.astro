---
import getVideoId from "get-video-id"
import { Video } from "lib/interfaces"
const { video } = Astro.props as { video: Video }
const { id } = getVideoId(video.videoLink)
const url = `https://player.vimeo.com/video/${id}?dnt=1`
---

<iframe
  title="vimeo-player"
  src={url}
  width="640"
  height="360"
  frameborder="0"
  allowfullscreen
  class="video-embed"
>
</iframe>

<style>
  .video-embed {
    width: 100%;
    aspect-ratio: 16 / 9;
  }
</style>
