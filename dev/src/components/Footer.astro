---
const { site } = Astro.props
const year = new Date().getFullYear().toString()
const { email, siteName } = site
---

<footer class="footer container">
  <p>Contact: <a href="mailto:${email}">{email}</a></p>
  <p>&copy; {year} {siteName}</p>
</footer>

<style lang="scss">
.footer {
  position: relative;
  z-index: 5;
}
</style>
