---
import Navbar from "components/Navbar.astro"
const { pathname, siteName } = Astro.props as {
  pathname: string
  siteName: string
}
---
<header class="header container flex">
  <div class="gradient-background"></div>
  <h1 class="lh-1"><a href="/" class="logo text-white">{siteName}</a></h1>
  <Navbar {pathname} />
</header>

